{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "target": "ES2020",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "../src/*"
      ],
      "~": [
        "../src"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
